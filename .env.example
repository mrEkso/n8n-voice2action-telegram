# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ALLOWED_USERS=  # Comma-separated user IDs (leave empty to allow all)

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash  # gemini-pro (text only), gemini-1.5-flash or gemini-1.5-pro (audio support)

# Audio Processing Method
# whisper - Use Whisper for transcription, then send text to Gemini (default, more accurate)
# gemini - Send audio directly to Gemini API (requires gemini-1.5-flash or gemini-1.5-pro)
AUDIO_PROCESSING_METHOD=whisper

# Google OAuth (for Gmail and Calendar)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Whisper Configuration
WHISPER_MODEL=tiny  # tiny, base, small, medium, large (tiny for minimal resources)
WHISPER_LANGUAGE=auto  # auto, en, ru, etc.

# Server Configuration
PORT=3000
HOST=127.0.0.1

# Paths
DATA_DIR=./data
TEMP_DIR=./temp
LOGS_DIR=./logs
WHISPER_MODELS_DIR=./models

# Resource Limits
MAX_AUDIO_SIZE_MB=20
MAX_CONCURRENT_REQUESTS=1  # Process one request at a time to save resources

# Auto-cleanup
AUTO_CLEANUP_TEMP=true
TEMP_FILE_MAX_AGE_HOURS=1

# Logging
LOG_LEVEL=info  # debug, info, warn, error
